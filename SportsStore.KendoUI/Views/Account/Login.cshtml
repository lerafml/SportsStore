@model SportsStore.KendoUI.Models.LoginViewModel

@{
    ViewBag.Title = "Admin: Log In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <h1>Авторизация</h1>
    <p>Авторизуйтесь, чтобы получить доступ к административной части:</p>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.EditorForModel()
        <p><input class="k-button" type="submit" value="Войти" /></p>
    }
</div>
<style>
    .content {
        width: 100%;
        padding-top: 100px;
        text-align: center;
    }

    .k-button {
        margin-top: 20px;
    }
</style>