@model SportsStore.KendoUI.Models.ProductViewModel

@Html.HiddenFor(m => m.ProductID)

@Html.HiddenFor(m => m.FileName)

@Html.HiddenFor(m => m.ImageMimeType)

@Html.LabelFor(m => m.Name)
@Html.Kendo().TextBoxFor(model => model.Name)
@Html.ValidationMessageFor(m => m.Name)

@Html.LabelFor(m => m.Description)
@Html.Kendo().TextBoxFor(model => model.Description)
@Html.ValidationMessageFor(m => m.Description)

@Html.LabelFor(m => m.CatID)
@Html.EditorFor(m => m.CatID)

@Html.LabelFor(m => m.Price)
@(Html.Kendo().NumericTextBoxFor(m => m.Price)
        .HtmlAttributes(new { style = "width:100%" })
        .Format("{0:c}")
)
@Html.ValidationMessageFor(m => m.Price)

<img id="icon" width="100" height="100" style="margin: 15px;" src="@Url.Action("GetImage", "Admin", new { ProductID = "${ProductID}" })" />

@(Html.Kendo().Upload()
        .Name("image")
        .Multiple(false)
        .Async(a => a
                .Save("SaveImage", "Admin")
                .AutoUpload(true)
        )
        .Events(e => e.Success("onSuccess"))
        .Validation(validation =>
        {
            validation.AllowedExtensions(new string[] { ".jpg", ".png", ".jpeg" });
            validation.MaxFileSize(2097152);
        })
)

<style>
    .k-edit-form-container {
        padding: 15px;
    }

        .k-edit-form-container label {
            padding-right: 15px;
            display: block;
        }

        .k-edit-form-container input {
            width: auto;
            display: block;
            margin-bottom: 10px;
        }
</style>