@model int?

<img width="75" height="75" src="@Url.Action("GetImage", "Admin", new { ProductID = Model })"/>

@(Html.Kendo().Upload()
    .Name("image")
    .Multiple(false)
    .Async(a => a
            .Save("SaveImage", "Admin")
            .AutoUpload(true)
    )
    .Validation(validation => validation.AllowedExtensions(new string[] { ".jpg", ".png" }).MaxFileSize(3145728))
)
